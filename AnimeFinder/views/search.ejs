<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultado da Busca</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .card {
            flex: 1 1 calc(33.333% - 1rem); /* Ocupa 3 colunas em telas grandes */
            max-width: calc(33.333% - 1rem);
        }
        @media (max-width: 768px) {
            .card {
                flex: 1 1 100%; /* Em telas menores, ocupa toda a largura */
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Resultado da Busca</h1>

        <% if (mainResult) { %>
            <!-- Destaque para o mais relevante -->
            <div class="card mb-5">
                <img src="<%= mainResult.coverImage %>" class="card-img-top" alt="<%= mainResult.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= mainResult.title %></h5>
                    <p class="card-text"><strong>Sinopse:</strong> <%= mainResult.description ? mainResult.description.replace(/(<([^>]+)>)/gi, "") : "Sinopse não disponível" %></p>
                    <p class="card-text">Episódio: <%= mainResult.episode %></p>
                    <p class="card-text">Tempo: <%= mainResult.from.toFixed(2) %>s - <%= mainResult.to.toFixed(2) %>s</p>
                    <p class="card-text">Similaridade: <%= (mainResult.match * 100).toFixed(2) %> %</p>
                    <a href="https://anilist.co/anime/<%= mainResult.id %>" target="_blank" class="btn btn-primary">Ver no AniList</a>
                </div>
            </div>

            <!-- Outras possibilidades -->
            <h2>Outras Possibilidades</h2>
            <div class="card-container">
                <% otherResults.forEach((anime) => { %>
                    <div class="card">
                        <img src="<%= anime.coverImage %>" class="card-img-top" alt="<%= anime.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= anime.title %></h5>
                            <p class="card-text"><strong>Sinopse:</strong> <%= anime.description ? anime.description.replace(/(<([^>]+)>)/gi, "") : "Sinopse não disponível" %></p>
                            <p class="card-text">Similaridade: <%= (anime.match * 100).toFixed(2) %> %</p>
                            <a href="https://anilist.co/anime/<%= anime.id %>" target="_blank" class="btn btn-secondary">Ver no AniList</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>Não foram encontradas informações sobre o anime.</p>
        <% } %>

        <a href="/" class="btn btn-secondary mt-3">Voltar</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
